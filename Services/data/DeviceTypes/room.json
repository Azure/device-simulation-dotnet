{
    "SchemaVersion": "1.0.0",
    "Id": "333c0182-16e0-41d7-9864-0e602d0588e6",
    "Version": "0.0.1",
    "Name": "Room",
    "Description": "Simulated Room with multiple sensors",
    "Protocol": "MQTT",
    "DeviceState": {
        "Initial": {
            "temperature": 50.5,
            "temperature_unit": "F",
            "humidity": 50,
            "humidity_unit": "%",
            "lights_on": false,
            "latitude": 47.642117,
            "longitude": -122.136611
        },
        "SimulationInterval": "00:00:05",
        "SimulationScript": {
            "Type": "javascript",
            "Path": "room-state.js"
        }
    },
    "Telemetry": [
        {
            "Interval": "00:00:10",
            "MessageTemplate":
                "{\"t\":${temperature},\"t_unit\":\"${temperature_unit}\",\"h\":\"${humidity}\"}",
            "MessageSchema": {
                "Name": "RoomComfort;v1",
                "Format": "JSON",
                "Fields": {
                    "t": "double",
                    "t_u": "text",
                    "h": "integer"
                }
            }
        },
        {
            "Interval": "00:01:00",
            "MessageTemplate": "{\"lights\":${lights_on}}",
            "MessageSchema": {
                "Name": "RoomLights;v1",
                "Format": "JSON",
                "Fields": {
                    "lights": "boolean"
                }
            }
        }
    ],
    "CloudToDeviceMethods": {
        "TurnLightsOn": {
            "Type": "javascript",
            "Path": "TBD.js"
        },
        "TurnLightsOff": {
            "Type": "javascript",
            "Path": "TBD.js"
        }
    }
}
