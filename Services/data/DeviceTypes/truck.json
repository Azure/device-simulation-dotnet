    "Version": "0.0.1",
    "Name": "Truck",
    "Description": "Simulated Truck with speed and geolocation sensors",
    "Protocol": "MQTT",
    "DeviceState": {
        "Initial": {
            "latitude": 44.898556,
            "longitude": 10.043592,
            "speed": 10
        },
        "SimulationInterval": "00:00:05",
        "SimulationScript": {
            "Type": "javascript",
            "Path": "truck-state.js"
        }
    },
    "Telemetry": [
        {
            "Interval": "00:00:05",
            "MessageTemplate":
                "{\"geolocation\":\"${latitude},${longitude}\",\"speed\":${speed},\"speed_unit\":\"mph\"}",
            "MessageSchema": {
                "Name": "truck;v1",
                "Format": "JSON",
                "Fields": {
                    "geolocation": "text",
                    "speed": "integer",
                    "speed_unit": "text"
                }
            }
        }
    ],
    "CloudToDeviceMethods": {
        "GoDownOneFloor": {
            "Type": "javascript",
            "Path": "TBD.js"
        },
        "GoUpOneFloor": {
            "Type": "javascript",
            "Path": "TBD.js"
        }
    }
}
