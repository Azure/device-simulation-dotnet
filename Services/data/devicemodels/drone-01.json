{
  "SchemaVersion": "1.0.0",
  "Id": "drone-01",
  "Version": "0.0.1",
  "Name": "Poltergeist",
  "Description": "Delivery carrier drone with multiple sensors.",
  "Protocol": "MQTT",
  "Simulation": {
    "InitialState": {
      "online": true,
      "temperature": 75.0,
      "temperature_unit": "F",
      "velocity": 0.0,
      "velocity_unit": "mm/sec",
      "acceleration": 0.0,
      "acceleration_unit": "mm/sec^2",
      "latitude": 44.234567,
      "longitude": 30.456789,
      "altitude": 0.0,
      "flightPosition": 0,
      "flightStatus": "0",
      "batteryStatus": "full",
      "batteryLevel": 1.0
    },
    "Script": {
      "Type": "javascript",
      "Path": "drone-01-state.js",
      "Interval": "00:00:05"
    }
  },
  "Properties": {
    "Type": "Drone",
    "Firmware": "1.0",
    "Model": "DJI-Phantom",
    "OwnerId": "patterns-n-practices",
    "origin_latitude": 44.234567,
    "origin_longitude": 30.456789,
    "destination_latitude": 88.234567,
    "destination_longitude": -10.456789
  },
  "Tags": {
    "Location": "Building 43",
    "Floor": "1",
    "Campus": "Redmond"
  },
  "Telemetry": [
    {
      "Interval": "00:00:05",
      "MessageTemplate": "{\"velocity\":\"${velocity}\",\"acceleration\":\"${acceleration}\",\"position\":\"${latitude}|${longitude}|${altitude}\",\"flightStatus\":\"${flightStatus}\"}",
      "MessageSchema": {
        "Name": "drone-event-sensor;v1",
        "Format": "JSON",
        "Fields": {
          "velocity": "double",
          "velocity_unit": "text",
          "acceleration": "double",
          "acceleration_unit": "text",
          "latitude": "double",
          "longitude": "double",
          "altitude": "double",
          "flightStatus": "text"
        }
      }
    },
    {
      "Interval": "00:00:20",
      "MessageTemplate": "{\"temperature\":\"${temperature}\",\"batteryStatus\":\"${batteryStatus}\",\"batteryLevel\":\"${batteryLevel}\"}",
      "MessageSchema": {
        "Name": "drone-state-sensor;v1",
        "Format": "JSON",
        "Fields": {
          "temperature": "double",
          "temperature_unit": "text",
          "batteryStatus": "text",
          "batteryLevel": "double"
        }
      }
    }
  ]
}